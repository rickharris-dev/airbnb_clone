'''script  to define some variables of your RestAPI application depending of the environment variable AIRBNB_ENV'''

import os

airbnb_env = os.environ.get('AIRBNB_ENV')

if airbnb_env == 'production':
    airbnb_pwd_prod = os.environ.get('AIRBNB_DATABASE_PWD_PROD')
    os.environ["DEBUG"] = "False"
    os.environ["HOST"] = "0.0.0.0"
    os.environ["PORT"] = "3000"
    os.environ["DATABASE"] = '{"host": "158.69.85.206", "user": "airbnb_user_prod", "database":"airbnb_prod", "port": "3306", "charset": "utf8", "password": '+airbnb_pwd_prod+'}'

if airbnb_env == 'development':
    airbnb_pwd_dev = os.environ.get('AIRBNB_DATABASE_PWD_DEV')
    os.environ["DEBUG"] = "True"
    os.environ["HOST"] = "localhost"
    os.environ["PORT"] = "3333"
    os.environ["DATABASE"] = '{"host": "158.69.85.206", "user": "airbnb_user_dev", "database":"airbnb_dev", "port": "3306", "charset": "utf8", "password": '+airbnb_pwd_dev+'}'


